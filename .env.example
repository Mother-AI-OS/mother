# Mother Agent Configuration
# Copy this file to .env and fill in your values

# ============================================================
# REQUIRED: Anthropic API Key
# ============================================================
ANTHROPIC_API_KEY=sk-ant-api03-...

# ============================================================
# API Authentication
# ============================================================
# API key for authenticating requests to Mother Agent
# Leave empty to allow unauthenticated access (local-only mode)
MOTHER_API_KEY=your-secure-api-key-here

# ============================================================
# Tool Credentials
# ============================================================
# Password for mailcraft encrypted account store
MAILCRAFT_PASSWORD=

# OpenAI API key (used by leads and taxlord for AI features)
OPENAI_API_KEY=

# ============================================================
# Server Settings (Optional)
# ============================================================
# Host and port for the FastAPI server
MOTHER_HOST=127.0.0.1
MOTHER_PORT=8080

# Claude model to use
CLAUDE_MODEL=claude-sonnet-4-20250514

# Maximum agent iterations per request
MAX_ITERATIONS=10

# Tool execution timeout in seconds
TOOL_TIMEOUT=300

# ============================================================
# Tool Paths (Optional - defaults shown)
# ============================================================
# Override if your tools are installed elsewhere
# MAILCRAFT_BIN=~/.local/bin/mailcraft
# LEADS_BIN=~/.local/bin/leads
# TAXLORD_DIR=~/projects/taxlord
# GCP_DRAFT_BIN=~/.local/bin/gcp-draft

# ============================================================
# Other Settings
# ============================================================
# Require API key authentication (set to false for local dev)
MOTHER_REQUIRE_AUTH=true

# Logging level
LOG_LEVEL=INFO
